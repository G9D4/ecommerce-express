<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="">

    </head>

    <body>
        <%- include('../includes/header-publicidad.ejs') %>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (typeof pedidos=='object' && pedidos.length==0) { %>
                    <h1>No ha realizado pedidos</h1>
                <% } else { %>
                    <ul class="orders">
                        <% pedidos.forEach(pedido=> { %>
                            <li class="orders__item">
                                <h1>Pedido - # <%= pedido._id %> 
                                </h1>
                                <a href="/pedidos/<%= pedido._id %>">Comprobante</a>
                                <ul class="orders__products">
                                    <% pedido.productos.forEach(item => { %>
                                        <li class="orders__products-item">(<%= item.cantidad %>) <%= item.producto.nombreproducto %> [<%= item.producto.precio %>]</li>
                                    <% }); %>
                                </ul>
                            </li>
                            <% }); %>
                    </ul>
                <% } %>
            </main>
            <%- include('../includes/end.ejs') %>