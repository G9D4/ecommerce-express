<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/producto.css">

    </head>

    <body>
        <%- include('../includes/header-publicidad.ejs') %>
        <%- include('../includes/navigation.ejs') %>
        <%- include('../includes/breadcrumbs.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div>
                        <h2><%= titulo %></h2>
                        <div>
                            <p>
                                <% if (prodsLength > 1) { %>
                                    <%= prodsLength %> artículos
                                <% } else { %>
                                    <%= prodsLength %> artículo
                                <% } %>
                            </p>
                            <div>
                                <span>Ordenar por</span>
                                <form id="formOrder" action="/categoria/<%= categoriaRuta %>?" method="GET">
                                    <select name="productOrder" id="productOrder">
                                        <option value="position" <% if (sortBy === 'position') { %>selected<% } %>>Posición</option>
                                        <option value="low-price" <% if (sortBy === 'low-price') { %>selected<% } %>>Menor precio</option>
                                        <option value="high-price" <% if (sortBy === 'high-price') { %>selected<% } %>>Mayor precio</option>
                                        <option value="name" <% if (sortBy === 'name') { %>selected<% } %>>Nombre</option>
                                    </select>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="grid">
                        <% for (let producto of prods) { %>
                            <article class="card product-item">
                                <div class="card__image">
                                    <a href="/productos/<%= producto._id %>">
                                        <img src="/<%= producto.urlImagen %>" alt="<%= producto.nombreproducto %>">
                                    </a>
                                </div>
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= producto.nombreproducto %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">S/. <%= producto.precio %></h2>
                                    <div class="card__actions">
                                        <% if (typeof user=='object' && user){ %>
                                            <%- include('../includes/agregar-al-carrito.ejs', {producto: producto}) %>
                                                <% }%>
                                    </div>
                                </div>
                            </article>
                        <% } %>
                    </div>
                    <%- include('../includes/paginacion.ejs')%>
                <% } else { %>
                    <h1>No hay productos</h1>
                <% } %>
            </main>

            <%- include('../includes/end.ejs') %>

            <script src="/js/sort.js"></script>